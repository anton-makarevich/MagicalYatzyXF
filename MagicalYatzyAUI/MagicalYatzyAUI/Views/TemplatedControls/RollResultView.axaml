<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="using:Sanet.MagicalYatzy.Avalonia.Views.TemplatedControls">
    <Design.PreviewWith>
        <controls:RollResultView />
    </Design.PreviewWith>

    <Style Selector="controls|RollResultView">
        <!-- Set Defaults -->
        <Setter Property="Template">
            <ControlTemplate>
                <Grid
                    Height="60"
                    Width="60" RowDefinitions="*,Auto">
                    <Label 
                        Foreground="White"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        FontSize="24"
                        Content="{TemplateBinding ScoreValue}"/>
                    <Label
                        Grid.Row="1"
                        Foreground="White"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        FontSize="14"
                        Content="{TemplateBinding ScoreName}"/>
                </Grid>
            </ControlTemplate>
        </Setter>
    </Style>
</Styles>
