<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:models="clr-namespace:Sanet.MagicalYatzy.Models;assembly=MagicalYatzy"
             xmlns:interactions="clr-namespace:Sanet.MagicalYatzy.Avalonia.Controls.Interactions"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:DataType="models:MainMenuAction"
             x:Class="Sanet.MagicalYatzy.Avalonia.Views.Cells.MainMenuCell">
       <Grid Margin="10,15,0,0" 
             Background="Transparent" 
             ColumnDefinitions="70,*" 
             RowDefinitions="*,*">

        <Image Source="{Binding Image, Converter={StaticResource ImageNameConverter}}"
               Grid.RowSpan="2"/>
        <Label Content="{Binding Label, Converter = {StaticResource StringUppercasedConverter}}"
               Classes="caption"
               Grid.Row="0" Grid.Column="1" />
        <Label Content="{Binding Description}"
               Classes="description"
               Grid.Column="1" Grid.Row="1"/>
    </Grid>
</UserControl>
