<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:observableWrappers="clr-namespace:Sanet.MagicalYatzy.ViewModels.ObservableWrappers;assembly=MagicalYatzy"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:DataType="observableWrappers:PlayerViewModel"
             x:Class="Sanet.MagicalYatzy.Avalonia.Views.Cells.PlayerScoresCell">
    <StackPanel
        Orientation="Vertical">
        <Label
            Background="{Binding IsMyTurn, Converter={StaticResource BoolToSanetColorConverter}}"
            Foreground="White"
            Content="{Binding Name}" />
        <ItemsControl 
            ItemsSource="{Binding Results}"
            VerticalAlignment = "Top"
            Background = "Transparent">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Label
                        Foreground="{StaticResource SanetBlueColor}"
                        Content="{Binding}" />
                </DataTemplate>
            </ItemsControl.ItemTemplate>
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <StackPanel Orientation="Vertical"/>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
        </ItemsControl>
        <Label
            Foreground="White"
            FontSize="Large"
            HorizontalAlignment="Center"
            Content="{Binding Total}" />
    </StackPanel>
</UserControl>
