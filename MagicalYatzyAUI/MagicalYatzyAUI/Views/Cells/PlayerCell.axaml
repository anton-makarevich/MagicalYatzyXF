<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:observableWrappers="clr-namespace:Sanet.MagicalYatzy.ViewModels.ObservableWrappers;assembly=MagicalYatzy"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:DataType="observableWrappers:PlayerViewModel"
             x:Class="Sanet.MagicalYatzy.Avalonia.Views.Cells.PlayerCell">
    <Grid
        Height="60" ColumnDefinitions="60,*,60">
        <Image Classes="profilepic"
               Source="{Binding Image, Converter={StaticResource ImageNameConverter}}"/>
        <Label 
            Grid.Column="1"
            Content="{Binding Name}"
            VerticalAlignment = "Center"
            Classes="caption"
        />
