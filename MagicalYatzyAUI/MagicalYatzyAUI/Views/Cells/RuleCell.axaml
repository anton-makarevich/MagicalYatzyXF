<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:observableWrappers="clr-namespace:Sanet.MagicalYatzy.ViewModels.ObservableWrappers;assembly=MagicalYatzy"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:DataType="observableWrappers:RuleViewModel"
             x:Class="Sanet.MagicalYatzy.Avalonia.Views.Cells.RuleCell">
    <Grid 
        Margin="10,15" Background="Transparent" ColumnDefinitions="60,*" RowDefinitions="Auto,*">

        <Label Content="{Binding Name, 
                   Converter = {StaticResource StringUppercasedConverter}}"
               Grid.Row="0" Grid.Column="1" Classes="caption" 
        />
        <Label Content="{Binding ShortDescription}" Grid.Column="1" Grid.Row="1" 
               Classes="description" />
    
    </Grid>
</UserControl>
