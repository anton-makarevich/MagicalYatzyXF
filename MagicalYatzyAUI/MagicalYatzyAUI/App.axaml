<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:converter="clr-namespace:Sanet.MagicalYatzy.Avalonia.Converter"
             x:Class="Sanet.MagicalYatzy.Avalonia.App"
             RequestedThemeVariant="Dark">

    <Application.Styles>
        <FluentTheme />
        
        <StyleInclude Source="Styles/AppStyles.axaml"/>
        <StyleInclude Source="Views/TemplatedControls/MainMenuItem.axaml"/>
    </Application.Styles>
    <Application.Resources>
        <ResourceDictionary>
            <converter:ImageNameConverter x:Key="ImageNameConverter"/>
            <converter:PanelWidthConverter x:Key="PanelWidthConverter"/>
            <converter:StringUppercasedConverter x:Key="StringUppercasedConverter"/>    
            <converter:AdaptiveOrientationConverter x:Key="AdaptiveOrientationConverter"/>    
            <ResourceDictionary.MergedDictionaries>
            <ResourceInclude Source="Resources/AppResources.axaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>